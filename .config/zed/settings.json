// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "always_treat_brackets_as_autoclosed": false,
  "assistant": {
    "enabled": true,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "dock": "right",
    "version": "2"
  },
  "auto_update": true,
  "autosave": {
    "after_delay": {
      "milliseconds": 5000
    }
  },
  "base_keymap": "VSCode",
  "buffer_font_family": "Monaspace Neon",
  "buffer_font_size": 11,
  "buffer_line_height": "comfortable",
  "enable_language_server": true,
  "chat_panel": {
    "dock": "left"
  },
  "confirm_quit": false,
  "current_line_highlight": "all",
  "cursor_blink": true,
  "cursor_shape": "bar",
  "features": {
    "inline_completion_provider": "copilot"
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/node_modules",
    "**/.zed",
    "**/.gitkeep",
    "**/.gitignore",
    "**/.gitattributes",
    "**/.editorconfig",
    "**/__pycache__",
    "**/__pypackages__",
    "**/*.pyc",
    "**/*.pyo",
    "**/*.pyd",
    "**/*.egg-info",
    "**/*.egg",
    "**/*.eggs",
    "**/pip-log.txt",
    "**/pip-delete-this-directory.txt",
    "**/target",
    "**/site-packages",
    "**/dist",
    "**/build",
    "**/venv",
    "**/env",
    "**/.venv",
    "**/.env",
    "**/venvs",
    "**/test",
    "**/tests",
    "**/*_test.py",
    "**/*_tests.py",
    "**/pytest_cache",
    "**/.pytest_cache",
    "**/coverage",
    "**/.coverage",
    "**/coverage.xml",
    "**/nosetests.xml",
    "**/htmlcov",
    "**/instance",
    "**/.ipynb_checkpoints",
    "**/.mypy_cache",
    "**/.ruff_cache",
    "**/.pylint_cache",
    "**/out",
    "**/output",
    "**/outputs",
    "**/bower_components",
    "**/*.lock",
    "**/package-lock.json",
    "**/yarn.lock",
    "**/pnpm-lock.yaml",
    "**/.idea",
    "**/.vscode",
    "**/.vs",
    "**/tmp",
    "**/temp",
    "**/logs",
    "**/*.log",
    "**/*.bak",
    "**/*.swp",
    "**/*.tmp",
    "**/*.temp"
  ],
  "format_on_save": "on",
  "formatter": "auto",
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 500
    }
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 1,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "inline_completions": {
    "disabled_globs": [".env"]
  },
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    }
  },
  "lsp": {
    "biome": {
      "settings": {
        "config_path": "<path>/biome.json",
        "require_config_file": true
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "keyOrdering": true,
          "format": {
            "singleQuote": true
          }
        }
      }
    }
  },
  "preferred_line_length": 140,
  "project_panel": {
    "dock": "right",
    "default_width": 120,
    "git_status": true
  },
  "remove_trailing_whitespace_on_save": true,
  "show_completions_on_input": true,
  "show_completion_documentation": true,
  "show_copilot_suggestions": true,
  "show_inline_completions": true,
  "show_whitespaces": "selection",
  "soft_wrap": "preferred_line_length",
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "tab_size": 2,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "copy_on_select": true,
    "dock": "bottom",
    "working_directory": "current_project_directory"
  },
  "theme": "One Hunter Vercel",
  "use_autoclose": true
}
